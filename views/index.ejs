<% layout("/biolerplate")%>
<body>

    <style>
        #filters{
           display: flex;
           flex-wrap: wrap;
            margin-left:3rem;

        }

        .filter{
            text-align:center;
            margin-right: 2rem;
            opacity: 0.6;
            
        }

        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }

        .Slide-toggle{
            border: 0.5px solid rgb(135, 122, 122);
            border-radius: 1rem;
           
            height: 2.8rem;
            padding: 0.5rem;
            margin-left: 15rem;
            
        }

        .gst{
            display: none;
        }

        .form-check-input{
            cursor: pointer;
        }
    </style>

    <div id="filters">
        <div class="filter">
           <div>    <i class="fa-solid fa-fire"></i></div>
           <p>Trending</p>
        </div>

        <div class="filter">
            <div>    <i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
         </div>

         <div class="filter">
            <div>  <i class="fa-solid fa-mountain-city"></i></div>
            <p>Mountain House</p>
         </div>
 
         <div class="filter">
             <div> <i class="fa-solid fa-mountain-sun"></i></div>
             <p>Mountain</p>  
          </div>

          <div class="filter">
            <div> <i class="fa-solid fa-person-swimming"></i></div>
            <p>pool</p>
         </div>

         <div class="filter">
            <div> <i class="fa-solid fa-water"></i></div>
            <p>RIver SIde</p>  
         </div>

         <div class="filter">
            <div> <i class="fa-solid fa-igloo"></i>></div>
            <p>Igloo</p>
         </div>

         <div class="filter">
            <div><i class="fa-solid fa-sailboat"></i></div>
            <p>Boat House</p>  
         </div>

         <div class="filter">
            <div><i class="fa-solid fa-hotel"></i></div>
            <p>Luxury Hotel</p>
         </div>

         <div class="filter">
            <div> <i class="fa-solid fa-building"></i></div>
            <p>Apartment</p>  
         </div>

         <div class="Slide-toggle">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                <label class="form-check-label" for="flexSwitchCheckReverse">Price after GST</label>
              </div>
         </div>


 

    </div>
    <div class="list">
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(list of allData) {%>
                <a href="/listing/<%= list._id%>" class="listing-list">
                    <div class="card col" >
                        <img src="<%=list.image.url %>" class="card-img-top" alt="listing-image">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                          <p class="card-text"><b><%= list.title%></b><br>
                           &#x20b9;<%= list.price.toLocaleString("en-IN")%>/Night
                          &nbsp;&nbsp; <i class="gst"> +18% GST</i>
                          </p>
                        </div>
                      </div>
                </a>
               
               
                <%}%>
        </div>
    </div>


   <script>
    let gsttoggle=  document.getElementById("flexSwitchCheckReverse");
    gsttoggle.addEventListener("click",()=>{
      let gstinfo= document.getElementsByClassName("gst");
      for(info of gstinfo){
        if(info.style.display!="inline"){
            info.style.display="inline";
         } else{
            info.style.display="none";
         }
        }
    });
   </script>

</body>
