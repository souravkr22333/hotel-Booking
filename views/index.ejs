<% layout("/biolerplate")%>
<body>

    <style>
        #filters{
           display: flex;
           flex-wrap: wrap;
            margin-left:3rem;

        }

        .filter{
            text-align:center;
            margin-right: 2rem;
            opacity: 0.6;
            
        }

        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }

        .Slide-toggle{
            border: 0.5px solid rgb(135, 122, 122);
            border-radius: 1rem;
           
            height: 2.8rem;
            padding: 0.5rem;
            margin-left: 15rem;
            
        }

        .gst{
            display: none;
        }

        .form-check-input{
            cursor: pointer;
        }

        .listing-card {
    width: 300px;
    border: 1px solid #ccc;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
}


    </style>

    <div id="filters">
        <div class="filter">
           <div>    <i class="fa-solid fa-fire"></i></div>
           <p>Trending</p>
        </div>

        <div class="filter">
            <div>    <i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
         </div>

         <div class="filter">
            <div>  <i class="fa-solid fa-mountain-city"></i></div>
            <p>Mountain House</p>
         </div>
 
         <div class="filter">
             <div> <i class="fa-solid fa-mountain-sun"></i></div>
             <p>Mountain</p>  
          </div>

          <div class="filter">
            <div> <i class="fa-solid fa-person-swimming"></i></div>
            <p>pool</p>
         </div>

         <div class="filter">
            <div> <i class="fa-solid fa-water"></i></div>
            <p>RIver SIde</p>  
         </div>

         <div class="filter">
            <div> <i class="fa-solid fa-igloo"></i>></div>
            <p>Igloo</p>
         </div>

         <div class="filter">
            <div><i class="fa-solid fa-sailboat"></i></div>
            <p>Boat House</p>  
         </div>

         <div class="filter">
            <div><i class="fa-solid fa-hotel"></i></div>
            <p>Luxury Hotel</p>
         </div>

         <div class="filter">
            <div> <i class="fa-solid fa-building"></i></div>
            <p>Apartment</p>  
         </div>

         <div class="Slide-toggle">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                <label class="form-check-label" for="flexSwitchCheckReverse">Price after GST</label>
              </div>
         </div>


 

    </div>
    <div class="list">
        <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
            <% for(list of allData) {%>
                <a href="/listing/<%= list._id%>" class="listing-list">
                    <div class="card col" style="width:20rem ; border-top-left-radius: 1rem; border-top-right-radius: 1rem;">

                        <div id="carouselExampleIndicators" class="carousel slide card-img" style="width: 20rem;">
                            <div class="carousel-indicators"  id="carouselInner">
                              <% for(let i=0;i<list.image.length;i++){%>
                               
                              <button type="button" id="carousel-Item" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= i %>" <%if(i===0){ %> class="active" <%}%>  aria-label="Slide <%= i %>"></button>
                              
                              <% } %>
                            </div>
                            <div class="carousel-inner indeximg">
                              <% let i=0 %>
                              <% for(img of list.image) { %>
                               
                              <div class="carousel-item   <% if(i===0){ %> 
                                active
                                <%}%> ">
                                <img src="<%=img.url%>" class="d-block w-100" alt="...">

                              </div>
                              <% i++ %>
                              <% } %>
                      
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Next</span>
                            </button>
                          </div>
 

                        <div class="card-body">
                          <p class="card-text"><b><%= list.title%></b><br>
                           &#x20b9;<%= list.price.toLocaleString("en-IN")%>/Night
                          &nbsp;&nbsp; <i class="gst"> +18% GST</i>
                          </p>
                        </div>
                      </div>
                </a>
               
               
                <%}%>
        </div>
    </div>


   <script>
    let gsttoggle=  document.getElementById("flexSwitchCheckReverse");
    gsttoggle.addEventListener("click",()=>{
      let gstinfo= document.getElementsByClassName("gst");
      for(info of gstinfo){
        if(info.style.display!="inline"){
            info.style.display="inline";
         } else{
            info.style.display="none";
         }
        }
    });
   </script>
 
</body>