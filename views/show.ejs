<% layout("/biolerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">


    <h3>Detail</h3>
    </div>
    <div class="card  col-6 offset-2" >
        <img src="<%=listings.image%>" class="card-img-top show-img" alt="Listing image">
        <div class="card-body">
          <p class="card-text"><b><%= listings.title %> </b><br>
            <%=listings.description %><br>
            &#x20b9;<%= listings.price.toLocaleString("en-IN") %><br>
            <%= listings.location%><br>
            <%= listings.country %>

        </p>
        </div>
      </div>
    </div>


   <div class= "row">
    

    <a href="/listing/<%= listings._id%>/edit" class="col-1 offset-2  mb-3  "><button class="btn edit-btn">Edit</button></a>

    
  
    <form method="POST" action="/listing/<%=listings._id%>?_method=DELETE" class=" offset--2  mb-1 col-1   " >
        <button class="btn delete-btn">Delete</button>

    </div>
    </form>

</div>

    
</body>
