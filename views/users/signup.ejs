<% layout("/biolerplate")%>
<div class="row mb-3">
    <div class="col-6 offset-3">
        <h3>SignUp Page</h3>
        <form method="post" action="/signup" class="needs-validation" novalidate> 
        <div class="username">
            <label for="username" class="form-label">Username:</label>
            <input type="text" id="username" name="username" placeholder="username" class="form-control" required>
            <div class="valid-feedback">good</div>
        </div>

        <div class="username">
            <label for="password" class="form-label">Password:</label>
            <input type="text" id="password" name="password" placeholder="password" class="form-control" required>
        </div>

        <div class="username">
            <label for="email" class="form-label">Email:</label>
            <input type="text" id="email" name="email" placeholder="Email" class="form-control" required>
        </div>

        <button class="btn btn-danger mt-2 mb-2">Submit</button>
        </form>
        
    </div>
</div>